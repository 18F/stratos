{
  "name": "helion-stackato-console",
  "version": "{{TAG}}",
  "vendor": "HPE",
  "components": [
    {
      "name": "hsc-console",
      "version": "1.0.0",
      "vendor": "HPE",
      "external_name": "Console",
      "min_RAM_mb": 256,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "capabilities": [],
      "image": "{{REGISTRY}}/helioncf/hsc-console:{{TAG}}",
      "workload_type": "container",
      "entrypoint": [],
      "parameters": [
        {
          "name": "CONSOLE_VERSION"
        }
      ],
      "affinity": [],
      "labels": [],
      "min_instances": 1,
      "max_instances": 1,
      "service_ports": [
        {
          "name": "http",
          "protocol": "TCP",
          "source_port": 80,
          "target_port": 80,
          "public": true
        },
        {
          "name": "https",
          "protocol": "TCP",
          "source_port": 443,
          "target_port": 443,
          "public": true
        }
      ],
      "volume_mounts": []
    },
    {
      "name": "hsc-proxy",
      "version": "1.0.0",
      "vendor": "HPE",
      "external_name": "Console - Proxy",
      "min_RAM_mb": 256,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "capabilities": [],
      "image": "{{REGISTRY}}/helioncf/hsc-proxy:{{TAG}}",
      "workload_type": "container",
      "entrypoint": [],
      "parameters": [
        {
          "name": "CONSOLE_VERSION"
        },
        {
          "name": "PGSQL_USER"
        },
        {
          "name": "PGSQL_PASSWORD"
        },
        {
          "name": "PGSQL_DATABASE"
        },
        {
          "name": "PGSQL_HOST"
        },
        {
          "name": "PGSQL_PORT"
        },
        {
          "name": "PGSQL_CONNECT_TIMEOUT"
        },
        {
          "name": "PGSQL_SSL_MODE"
        },
        {
          "name": "HTTP_CLIENT_TIMEOUT_IN_SECS"
        },
        {
          "name": "SKIP_TLS_VERIFICATION"
        },
        {
          "name": "TLS_ADDRESS"
        },
        {
          "name": "CONSOLE_CLIENT"
        },
        {
          "name": "CONSOLE_CLIENT_SECRET"
        },
        {
          "name": "HCE_CLIENT"
        },
        {
          "name": "HCF_CLIENT"
        },
        {
          "name": "ALLOWED_ORIGINS"
        },
        {
          "name": "SESSION_STORE_SECRET"
        },
        {
          "name": "GITHUB_OAUTH_CLIENT_ID"
        },
        {
          "name": "GITHUB_OAUTH_CLIENT_SECRET"
        },
        {
          "name": "GITHUB_OAUTH_STATE"
        }
      ],
      "affinity": [],
      "labels": [],
      "min_instances": 1,
      "max_instances": 1,
      "service_ports": [
        {
          "name": "proxy",
          "protocol": "TCP",
          "source_port": 3003,
          "target_port": 3003,
          "public": false
        }
      ],
      "volume_mounts": [
        {
          "volume_name": "hsc-migration-volume",
          "mountpoint": "/hsc-migration-volume"
        },
        {
          "volume_name": "hsc-encryption-key-volume",
          "mountpoint": "/hsc-encryption-key-volume"
        }
      ]
    },
    {
      "name": "hsc-db",
      "version": "1.0.0",
      "vendor": "HPE",
      "external_name": "Console - Database",
      "min_RAM_mb": 256,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "capabilities": [],
      "image": "docker.io/postgres:9.5",
      "workload_type": "container",
      "entrypoint": [],
      "parameters": [
        {
          "name": "CONSOLE_VERSION"
        },
        {
          "name": "POSTGRES_USER"
        },
        {
          "name": "POSTGRES_PASSWORD"
        },
        {
          "name": "PGDATA"
        }
      ],
      "affinity": [],
      "labels": [],
      "min_instances": 1,
      "max_instances": 1,
      "service_ports": [
        {
          "name": "postgres",
          "protocol": "TCP",
          "source_port": 5432,
          "target_port": 5432,
          "public": false
        }
      ],
      "volume_mounts": []
    }
  ],
  "features": {
    "auth": [
      {
        "auth_zone": "default",
        "clients": [
          {
            "id": "console",
            "name": "Console Client",
            "scopes": [
                "hcp.admin",
                "hcp.user",
                "uaa.user",
                "hcp.publisher"
            ],
            "authorized_grant_types": [
                "implicit",
                "password",
                "refresh_token"
            ],
            "access_token_validity": 3600,
            "refresh_token_validity": 2592000
          }
        ]
      }
    ]
  },
  "preflight": [],
  "postflight": [
    {
      "name": "hsc-create-database-job",
      "version": "1.0.0",
      "vendor": "HPE",
      "external_name": "Console - Create Database Job",
      "min_RAM_mb": 512,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "workload_type": "container",
      "capabilities": [],
      "image": "{{REGISTRY}}/helioncf/hsc-database-creation:{{TAG}}",
      "entrypoint": [],
      "parameters": [
        {
          "name": "CONSOLE_VERSION"
        },
        {
          "name": "DB_HOST"
        },
        {
          "name": "DB"
        },
        {
          "name": "CFGDB_PORT"
        },
        {
          "name": "DB_USER"
        },
        {
          "name": "DB_PW_FILE"
        },
        {
          "name": "STRATOS_DB"
        },
        {
          "name": "STRATOS_USER"
        },
        {
          "name": "STRATOS_PWD"
        },
        {
          "name": "SQL"
        },
        {
          "name": "POSTGRES_USER"
        },
        {
          "name": "POSTGRES_PASSWORD"
        }
      ],
      "affinity": [],
      "labels": [],
      "min_instances": 1,
      "max_instances": 1,
      "retry_count": 100,
      "service_ports": [],
      "volume_mounts": [
        {
          "volume_name": "hsc-migration-volume",
          "mountpoint": "/hsc-migration-volume"
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "stolon-data",
      "size_gb": 10,
      "filesystem": "ext4",
      "shared": false
    },
    {
      "name": "hsc-migration-volume",
      "size_gb": 1,
      "shared": true
    },
    {
      "name": "hsc-encryption-key-volume",
      "size_gb": 1,
      "shared": true
    }
  ],
  "labels": [],
  "parameters": [
    {
        "name": "CONSOLE_VERSION",
        "description": "The current version of the Helion Stackato Console",
        "default": "{{TAG}}",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "PGSQL_USER",
        "description": "Postgres username",
        "default": "stolon",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "PGSQL_PASSWORD",
        "description": "Postgres password",
        "default": "stolon",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "PGSQL_DATABASE",
        "description": "Postgres database name",
        "default": "hsc-db",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "PGSQL_HOST",
        "description": "Postgres hostname",
        "default": "hsc-db-int",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "PGSQL_PORT",
        "description": "Postgres port",
        "default": "5432",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "PGSQL_CONNECT_TIMEOUT",
        "description": "Postgres password",
        "default": "10",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "PGSQL_SSL_MODE",
        "description": "Postgres SSL mode",
        "default": "disable",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "POSTGRES_DB",
        "description": "Postgres database name",
        "default": "stratos-db",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "POSTGRES_PASSWORD",
        "description": "Postgres password",
        "default": "stolon",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "POSTGRES_USER",
        "description": "Postgres username",
        "default": "stolon",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "PGDATA",
        "description": "placeholder",
        "default": "/database",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "DB_USER",
        "description": "PostgreSQL user",
        "default": "stolon",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "DB_HOST",
        "description": "PostgreSQL host address",
        "default": "hsc-db-int",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "CFGDB_PORT",
        "description": "PostgreSQL port",
        "default": "5432",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
       "name": "DB",
       "description": "PostgreSQL default db ??",
       "default": "postgres",
       "data_type": "string",
       "required": true,
       "secret": false
    },
    {
        "name": "HTTP_CLIENT_TIMEOUT_IN_SECS",
        "description": "HTTP client timeoout",
        "default": "10",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "SKIP_TLS_VERIFICATION",
        "description": "To skip TLS or now?",
        "default": "true",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "TLS_ADDRESS",
        "description": "TLS Address",
        "default": ":3003",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "CONSOLE_CLIENT",
        "description": "Console client",
        "default": "console",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "HCE_CLIENT",
        "description": "HCE client",
        "default": "console",
        "example": "console",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "HCF_CLIENT",
        "description": "HCF client",
        "default": "cf",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "ALLOWED_ORIGINS",
        "description": "Allowed origins - TBD",
        "default": "https://localhost,https://127.0.0.1",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "SESSION_STORE_SECRET",
        "description": "Session store secret",
        "default": "cookiesecret",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "DB_PW_FILE",
        "description": "Database password file",
        "default": "/etc/secrets/stolon",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "STRATOS_DB",
        "description": "Stratos database",
        "default": "stratos-db",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "STRATOS_USER",
        "description": "Stratos user",
        "default": "stratos",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "STRATOS_PWD",
        "description": "Stratos password",
        "default": "stratos",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "SQL",
        "description": "Initial Stratos database schema",
        "default": "./InitialSchema.sql",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "GITHUB_OAUTH_CLIENT_ID",
        "description": "GitHub client ID for OAuth - see https://github.com/settings/applications/new",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "GITHUB_OAUTH_CLIENT_SECRET",
        "description": "GitHub client secret for OAuth",
        "data_type": "string",
        "required": true,
        "secret": false
    },
    {
        "name": "GITHUB_OAUTH_STATE",
        "description": "** DEPRECATED **",
        "data_type": "string",
        "required": true,
        "secret": false
    }
  ]
}
