FROM ubuntu:14.04

ENV DB_HOST="hsc-db-int" CFGDB_PORT=5432 \
  POSTGRES_DB="postgres" POSTGRES_USER="stolon" POSTGRES_PASSWORD="stolon" \
  PGSQL_DATABASE="stratos-db" PGSQL_USER="stratos" PGSQL_PASSWORD="stratos" \
  SQL="InitialSchema.sql"

RUN apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install -y postgresql

COPY /db/initial/InitialSchema.sql /
COPY /db/run-postflight-job.sh /

CMD ["/run-postflight-job.sh"]
